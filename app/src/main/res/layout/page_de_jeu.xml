<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/countdowm_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordure"
        android:text="3:00"
        android:textSize="20sp"

      />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AskedAction"
        android:background="@drawable/bordure"
        android:text="Bop-It!"
        android:textSize="20sp" />




    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="370dp"
        android:layout_height="580dp"
        android:onClick="gameOver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdowm_timer"
        app:layout_constraintVertical_bias="0.784"
        app:srcCompat="@drawable/bordure" />





    <ImageButton
        android:id="@+id/retourMenuJeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_pause"
        android:onClick="pauseMenu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="LoadGyroscope"
        android:text="Bop-it" />


</LinearLayout>




